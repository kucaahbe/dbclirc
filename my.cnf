[mysql]
# time/date is \D - since there is no way to specify day by number
prompt="(\\U\_\\v)\\_mysql://\\u@\\h:\\p/\\d\\_|\\_\\D\\n\\T>\\_"

# pager=less -FXRS
pager=pspg -s 17 -X --force-uniborder --quit-if-one-screen --bold-labels --no-sigint-search-reset

# auto completion:
auto-rehash

show-warnings
compression-algorithms=zlib
line-numbers

!include ~/.my.local.cnf

[client]
default-character-set=utf8mb4

[client_mycli]
default-character-set=utf8mb4
pager=pspg -s 17 -X --force-uniborder --quit-if-one-screen --bold-labels --no-sigint-search-reset

# vim: ft=dosini
